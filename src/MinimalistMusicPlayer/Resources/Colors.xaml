<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:sys="clr-namespace:System;assembly=mscorlib">

	<!--BRUSHES-->
	<SolidColorBrush x:Key="BackgroundBrush">#FFF</SolidColorBrush> <!-- light: #FFF - dark: #2E2E2E -->
	<SolidColorBrush x:Key="AccentBrush">#454B56</SolidColorBrush> <!-- accents: blue: #007ACC - orange: #D64D1A - red: FireBrick -->

	<SolidColorBrush x:Key="PrimaryBrush">#000</SolidColorBrush> <!-- light: #2E2E2E - dark: #FFF -->
	<SolidColorBrush x:Key="SecondaryBrush">#777</SolidColorBrush> <!-- light: #555 - dark: #AAA -->
	<SolidColorBrush x:Key="PrimaryHoverBrush">#DDD</SolidColorBrush> <!-- light: #E0E0E0 - dark: #555 -->

	<SolidColorBrush x:Key="TransparentBrush">#0FFF</SolidColorBrush>
    
	<!--COLORS-->
	<Color x:Key="BackgroundColor">#FFF</Color> <!-- light: #FFF - dark: ##2E2E2E -->
	<Color x:Key="AccentColor">#454B56</Color> <!-- light: #0078D7 - dark: 007ACC -->

	<Color x:Key="PrimaryColor">#000</Color> <!-- light: #2E2E2E - dark: #FFF -->
	<Color x:Key="SecondaryColor">#777</Color> <!-- light: #555 - dark: #AAA -->
	<Color x:Key="PrimaryHoverColor">#DDD</Color> <!-- light: #E0E0E0 - dark: #555 -->

	<Color x:Key="TransparentColor">#0FFF</Color>

	<!--CONSTANTS-->
	<sys:Double x:Key="MainButtonSize">32</sys:Double>

</ResourceDictionary>